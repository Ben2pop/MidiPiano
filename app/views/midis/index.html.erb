<div class="container">


    <div id="pins" class="transitions-enabled">
      <% @midis.each do |midi| %>
        <div class="box panel panel-default">
         <%= link_to image_tag(midi.image.url(:thumb)), midi %>
          <div class="panel-body">
            <p><%= midi.author %></p>
            <p><%= midi.title %></p>
        
              <% if midi.user == current_user %>
              <%= link_to edit_midi_path(midi) do %>
              <span class="glyphicon glyphicon-edit"></span>
              Edit
            <% end %>
            <%= link_to midi, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
            <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

</div>